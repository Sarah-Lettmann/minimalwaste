---
[
  {% for post in site.posts %}
  {

    "title"    : "{{ post.title | escape }}",
    "url"      : "{{ post.permalink }}",
    "category" : "{{ post.category | join: ', ' }}",
    "tags"     : "{{ post.tags | join: ', ' }}",
    "date"     : "{{ post.date }}"

  } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]