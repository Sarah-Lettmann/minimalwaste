---
---
[
  {% for post in site.posts %}
  {

    "title"    : "{{ post.title | escape }}",
    "url"      : "{{ post.url }}",
    "category" : "{{ post.categories | join: ', ' }}",
    "tags"     : "{{ post.tags | join: ', ' }}",
    "date"     : "{{ post.date | date: '%d.%m.%Y' }}",
    "image"    : "{{ post.image }}",
    "author"   : "{{ site[post.author].name }}"

  } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
